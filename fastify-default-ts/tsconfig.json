{
  "compilerOptions": {
    "outDir": "build",
    "target": "esnext",
    "module": "esnext",
    "allowJs": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "plugins": [
      {
        "name": "typescript-strict-plugin"
      }
    ],
    "resolveJsonModule": true
  },
  "include": [
    "src",
    "test"
  ],
  "ts-node": {
    "swc": true
  }
}
